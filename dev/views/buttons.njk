{% extends "../templates/layout.njk" %}
{% set title="buttons" %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <h3>Button <span class="text-exp-pink">.btn.exp-hero</span> is used in hero sections on home page and sub pages.</h3>
            <button class="btn exp-hero">Button .btn.exp-hero</button> 
            <button class="btn exp-outline-hero">Button .btn.exp-hero</button>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12">
            <h3>Button <span class="text-exp-pink">.btn.exp-default</span> is used in body section and as form buttons.<span class="text-exp-pink">submit buttons</span> too.</h3>
            <button class="btn exp-default">Button .btn.exp-default</button> 
            <button type="submit">Button [ type="submit" ]</button>
            <button class="btn exp-outline-default">Button .btn.exp-outline-default</button> 
            <button type="reset">Button [ type="reset" ]</button>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12">
            <h3>Spotlight buttons are used with <span class="text-exp-pink">.btn-block</span>.</h3>
            <button class="btn btn-block exp-default">.btn.btn-block.exp-default</button> 
            <button class="btn btn-block exp-outline-default">.btn.btn-block.exp-outline-default</button> 
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12 bg-exp-dark-grey p-4">
            <h3 class="text-white">White buttons default style.</h3>
            <button class="btn exp-white">.btn.exp-white</button> 
            <button class="btn exp-outline-white">.btn.exp-outline-white</button> 
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12">
            <h3 class="text-exp-red">NB: Button hierarchy -> Hero, Body, form, spotlight buttons, solid buttons, outlined</h3>
        </div>
    </div>
{% endblock %}
