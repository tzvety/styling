{% extends "../templates/layout.njk" %}
{% set title="borders" %}

{% set primaryColors = ['exp-dark-blue', 'exp-light-blue', 'exp-violet', 'exp-purple', 'exp-pink'] %}

{% block content %}
    <div class="row mt-4">
        <div class="col-12">
            <h5>.exp-rounded <span class="text-exp-medium-grey">(border-radius is set to 6px) (Bootstrap's border-radius is 4px)</span></h5>
        </div>
    </div>
    <div class="row">
         {% for color in primaryColors %}
            <div class="col-2 mt-1">
                <div class="bg-{{ color }} exp-rounded p-4"><br/><br/></div>
            </div>
        {% endfor %}
    </div>
